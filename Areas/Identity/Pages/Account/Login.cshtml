@page
@model SPT.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - SPT</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f0f2f5;
            font-family: 'Segoe UI', sans-serif;
            transition: background 0.5s ease;
        }

        .login-card {
            width: 900px;
            max-width: 95%;
            min-height: 550px;
            display: flex;
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            overflow: hidden;
            position: relative;
        }

        .visual-side {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: white;
            padding: 40px;
            text-align: center;
            transition: all 0.5s ease;
        }

        .form-side {
            flex: 1;
            padding: 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background: #fff;
            transition: background 0.5s ease;
        }

        .theme-student .visual-side {
            background: #4f46e5;
        }

        .theme-student .btn-action {
            background-color: #4f46e5;
            color: white;
        }

        .theme-admin .visual-side {
            background: #0f172a;
            color: #94a3b8;
        }

        .theme-admin .form-side {
            background: #1e293b;
            color: white;
        }

        .theme-admin .form-control {
            background-color: #334155;
            border: 1px solid #475569;
            color: white;
        }

            .theme-admin .form-control::placeholder {
                color: #94a3b8;
            }

        .theme-admin label, .theme-admin p, .theme-admin small {
            color: #cbd5f1 !important;
        }

        .theme-admin h3 {
            color: white !important;
        }

        .theme-admin .btn-action {
            background-color: #38bdf8;
            color: #0f172a;
        }

        .theme-admin .forgot-link {
            color: #38bdf8 !important;
        }

        .theme-admin .input-group-text {
            background-color: #475569;
            border-color: #475569;
            color: #cbd5e1;
        }

        .theme-admin .toggle-password {
            background-color: #475569;
            border-color: #475569;
            color: #cbd5e1;
        }

        .role-switch {
            position: absolute;
            top: 20px;
            right: 20px;
            background: rgba(0,0,0,0.05);
            padding: 5px;
            border-radius: 30px;
            z-index: 10;
            display: flex;
            gap: 5px;
        }

        .role-btn {
            border: none;
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: bold;
            background: transparent;
            color: #666;
            cursor: pointer;
            transition: 0.3s;
        }

            .role-btn.active {
                background: white;
                color: #000;
                box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            }

        .btn-action {
            border: none;
            padding: 12px;
            border-radius: 8px;
            font-weight: bold;
            width: 100%;
            margin-top: 20px;
            cursor: pointer;
        }

        .toggle-password {
            border: 1px solid #ced4da;
            border-left: none;
            background: #f8f9fa;
            cursor: pointer;
            padding: 0 12px;
            border-radius: 0 6px 6px 0;
        }

            .toggle-password:hover {
                background: #e9ecef;
            }

        .forgot-link {
            font-size: 0.82rem;
            color: #4f46e5;
            text-decoration: none;
        }

            .forgot-link:hover {
                text-decoration: underline;
            }
    </style>
</head>

<body>

    <div class="login-card theme-student" id="loginCard">

        <!-- Role Switch -->
        <div class="role-switch">
            <button type="button" class="role-btn active" onclick="setRole('student', this)">Student</button>
            <button type="button" class="role-btn" onclick="setRole('admin', this)">Admin / Mentor</button>
        </div>

        <!-- Visual Side -->
        <div class="visual-side">
            <i class="fas fa-graduation-cap" style="font-size: 5rem; margin-bottom: 20px;" id="visualIcon"></i>
            <h2 id="visualTitle" class="fw-bold">Welcome Student</h2>
            <p id="visualText" style="opacity: 0.9;">Access your dashboard, track progress, and learn.</p>
        </div>

        <!-- Form Side -->
        <div class="form-side">
            <div class="mb-4">
                <h3 class="fw-bold" id="formHeader">Student Login</h3>
                <p class="text-muted small">Please sign in to continue.</p>
            </div>

            <form method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" name="Input.LoginType" id="loginType" value="student" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger small py-2">@Model.ErrorMessage</div>
                }

                <!-- Email / Username -->
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label fw-bold small">Email or Username</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input asp-for="Input.Email" class="form-control" placeholder="Enter email or username" autocomplete="username" required />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <!-- Password with toggle -->
                <div class="mb-2">
                    <label asp-for="Input.Password" class="form-label fw-bold small">Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input asp-for="Input.Password"
                               id="passwordField"
                               class="form-control"
                               type="password"
                               placeholder="Enter your password"
                               autocomplete="current-password"
                               required />
                        <!-- ✅ Show/Hide toggle -->
                        <button type="button" class="toggle-password" id="togglePassword" title="Show/Hide Password">
                            <i class="fas fa-eye" id="eyeIcon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <!-- Remember me + Forgot password -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input asp-for="Input.RememberMe" class="form-check-input" />
                        <label asp-for="Input.RememberMe" class="form-check-label small">Remember me</label>
                    </div>
                    <!-- ✅ Forgot Password link -->
                    <a asp-page="./ForgotPassword" class="forgot-link">
                        <i class="fas fa-key me-1"></i> Forgot password?
                    </a>
                </div>

                <button type="submit" class="btn-action shadow-sm">
                    <i class="fas fa-sign-in-alt me-2"></i> Log In
                </button>

            </form>
        </div>

    </div>

    <script>
        // ✅ Password show/hide toggle
        document.getElementById('togglePassword').addEventListener('click', function () {
            const field = document.getElementById('passwordField');
            const icon = document.getElementById('eyeIcon');
            const isHidden = field.type === 'password';
            field.type = isHidden ? 'text' : 'password';
            icon.className = isHidden ? 'fas fa-eye-slash' : 'fas fa-eye';
        });

        // ✅ Role theme switcher
        function setRole(role, btn) {
            const card = document.getElementById('loginCard');
            const btns = document.querySelectorAll('.role-btn');

            btns.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            document.getElementById('loginType').value = role;

            if (role === 'student') {
                card.className = 'login-card theme-student';
                document.body.style.backgroundColor = '#f0f2f5';
                document.getElementById('visualTitle').innerText = 'Welcome Student';
                document.getElementById('formHeader').innerText = 'Student Login';
                document.getElementById('visualText').innerText = 'Access your dashboard, track progress, and learn.';
                document.getElementById('visualIcon').className = 'fas fa-graduation-cap';
            } else {
                card.className = 'login-card theme-admin';
                document.body.style.backgroundColor = '#0f172a';
                document.getElementById('visualTitle').innerText = 'Admin Portal';
                document.getElementById('formHeader').innerText = 'Admin / Mentor Login';
                document.getElementById('visualText').innerText = 'Manage students, review logs, and monitor performance.';
                document.getElementById('visualIcon').className = 'fas fa-user-shield';
            }
        }
    </script>

</body>
</html>