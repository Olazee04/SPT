@model IEnumerable<SPT.Models.Cohort>

@{
    ViewData["Title"] = "Manage Cohorts";
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="font-weight-bold text-gray-800"><i class="fas fa-users-class text-primary mr-2"></i> Manage Cohorts</h2>
            <p class="text-muted mb-0">Create and manage academic sessions.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus mr-1"></i> New Cohort
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle mr-1"></i> @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-uppercase small text-muted">
                        <tr>
                            <th class="pl-4">Cohort Name</th>
                            <th>Duration</th>
                            <th class="text-center">Students</th>
                            <th class="text-center">Status</th>
                            <th class="text-right pr-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="pl-4 font-weight-bold text-dark">@item.Name</td>
                                    <td class="small text-muted">
                                        <div>Start: @item.StartDate.ToString("MMM dd, yyyy")</div>
                                        <div>End: @item.EndDate.ToString("MMM dd, yyyy")</div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge badge-light border">@item.Students.Count</span>
                                    </td>
                                    <td class="text-center">
                                        @if (item.IsActive)
                                        {
                                            <span class="badge badge-success px-2 py-1">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary px-2 py-1">Closed</span>
                                        }
                                    </td>
                                    <td class="text-right pr-4">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary mr-1">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure? This cannot be undone.');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">No cohorts found. Create one to get started.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>