@model SPT.Models.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Analytics";
}

<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="custom-card border-start border-4 border-primary p-3">
            <h6 class="text-muted text-uppercase small fw-bold">Active Students</h6>
            <h2 class="fw-bold mb-0 text-primary">@Model.ActiveStudents</h2>
            <small class="text-muted">Checked in ≥ 3 times/week</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="custom-card border-start border-4 border-warning p-3">
            <h6 class="text-muted text-uppercase small fw-bold">Pending Logs</h6>
            <h2 class="fw-bold mb-0 text-warning">@Model.PendingLogs</h2>
            <small class="text-muted">Need approval</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="custom-card border-start border-4 border-danger p-3">
            <h6 class="text-muted text-uppercase small fw-bold">Open Tickets</h6>
            <h2 class="fw-bold mb-0 text-danger">@Model.OpenTickets</h2>
            <small class="text-muted">Support requests</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="custom-card border-start border-4 border-info p-3">
            <h6 class="text-muted text-uppercase small fw-bold">Avg Consistency</h6>
            <h2 class="fw-bold mb-0 text-info">@Math.Round(Model.AvgConsistency)%</h2>
            <small class="text-muted">Class-wide performance</small>
        </div>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-lg-8">
        <div class="custom-card h-100 p-4">
            <h5 class="card-title-custom mb-3 border-0">📈 Learning Activity (Last 7 Days)</h5>
            <div style="height: 300px;">
                <canvas id="activityChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="custom-card h-100 p-4">
            <h5 class="card-title-custom mb-3 border-0">🎓 Students per Track</h5>
            <div style="height: 250px; position: relative;">
                <canvas id="trackChart"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="custom-card p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h5 class="fw-bold mb-0">Student Performance Details</h5>
        <input type="text" class="form-control w-25" placeholder="Search student..." id="studentSearch">
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="bg-light">
                <tr>
                    <th>Student</th>
                    <th>Status</th>
                    <th>Hours (7d)</th>
                    <th>Consistency</th>
                    <th>Syllabus Progress</th>
                    <th>Mentor Rating</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model.StudentPerformance)

                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="@(s.ProfilePicture ?? "/images/default-avatar.png")" class="rounded-circle me-2 border" width="40" height="40" style="object-fit:cover;">
                                <div>
                                    <div class="fw-bold">@s.FullName</div>
                                    <small class="text-muted badge bg-light text-dark border">@s.Track</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            @if (s.Status == "Active")
                            {
                                <span class="badge bg-success-subtle text-success border border-success">Active</span>
                            }

                            else
                            {
                                <span class="badge bg-danger-subtle text-danger border border-danger">Inactive</span>
                            }
                            <div class="small text-muted mt-1">@s.WeeklyCheckIns check-ins</div>
                        </td>
                        <td><h6 class="mb-0 fw-bold">@s.WeeklyHours hrs</h6></td>
                        <td style="width: 15%;">
                            <div class="d-flex justify-content-between small mb-1">
                                <span>Score</span><span class="fw-bold">@s.ConsistencyScore%</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar @(s.ConsistencyScore >= 70 ? "bg-success" : "bg-warning")" style="width: @s.ConsistencyScore%"></div>
                            </div>
                        </td>
                        <td style="width: 15%;">
                            <div class="d-flex justify-content-between small mb-1">
                                <span>@s.CompletedModules / @s.TotalModules</span><span class="fw-bold">@s.SyllabusProgress%</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-primary" style="width: @s.SyllabusProgress%"></div>
                            </div>
                        </td>
                        <td>
                            @if (s.AverageMentorScore > 0)

                            {
                                <div class="text-warning">
                                    <span class="fw-bold text-dark me-1">@s.AverageMentorScore</span>
                                    <i class="fas fa-star"></i>
                                </div>
                            }

                            else
                            {
                                <span class="text-muted small">No ratings</span>
                            }
                        </td>
                        <td>
                            <a asp-action="ProgressLogs" asp-route-studentId="@s.StudentId" class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i> Logs</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Data passed from Controller
        const trackLabels = @Html.Raw(Json.Serialize(Model.TrackLabels));
        const trackCounts = @Html.Raw(Json.Serialize(Model.TrackCounts));
        const dateLabels = @Html.Raw(Json.Serialize(Model.ActivityDates));
        const logCounts = @Html.Raw(Json.Serialize(Model.ActivityCounts));

        // Chart 1: Activity
        new Chart(document.getElementById('activityChart'), {
            type: 'line',
            data: {
                labels: dateLabels,
                datasets: [{
                    label: 'Logs Submitted',
                    data: logCounts,
                    borderColor: '#4361ee',
                    backgroundColor: 'rgba(67, 97, 238, 0.1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: { responsive: true, maintainAspectRatio: false }
        });

        // Chart 2: Tracks
        new Chart(document.getElementById('trackChart'), {
            type: 'doughnut',
            data: {
                labels: trackLabels,
                datasets: [{
                    data: trackCounts,
                    backgroundColor: ['#4361ee', '#3a0ca3', '#7209b7', '#f72585']
                }]
            },
            options: { responsive: true, maintainAspectRatio: false }
        });
    </script>
}