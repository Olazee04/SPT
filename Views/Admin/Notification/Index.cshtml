@model IEnumerable<SPT.Models.Notification>
@{
    ViewData["Title"] = "My Notifications";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3><i class="fas fa-bell"></i> Notifications</h3>
        <button class="btn btn-sm btn-outline-secondary" onclick="markRead()">Mark All Read</button>
    </div>

    <div class="list-group">
        @foreach (var n in Model)
        {
            string bgClass = n.IsRead ? "bg-white" : "bg-light border-start border-4 border-primary";
            <a href="@(n.Url ?? "#")" class="list-group-item list-group-item-action @bgClass">
                <div class="d-flex w-100 justify-content-between">
                    <h6 class="mb-1">@n.Message</h6>
                    <small class="text-muted">@n.CreatedAt.ToString("MMM dd HH:mm")</small>
                </div>
            </a>
        }
        @if (!Model.Any())
        {
            <div class="alert alert-info">No notifications yet.</div>
        }
    </div>
</div>

<script>
    // Auto-mark as read when visiting this page
    window.onload = function() {
        fetch('/Notification/MarkAllRead', { method: 'POST' });
    };
    function markRead() { location.reload(); }
</script>