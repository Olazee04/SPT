@model List<SPT.Models.Mentor>
@{
    ViewData["Title"] = "Mentors Directory";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="fw-bold"><i class="fas fa-chalkboard-teacher me-2"></i> Mentors Directory</h4>

    @if (User.IsInRole("Admin"))
    {
        <a asp-action="CreateMentor" class="btn btn-dark"><i class="fas fa-plus"></i> Add Mentor</a>
    }
</div>

<div class="row g-4">
    @foreach (var mentor in Model)
    {
        <div class="col-md-4">
            <div class="custom-card h-100 text-center position-relative">
                @if (!string.IsNullOrEmpty(mentor.ProfilePicture))
                {
                    <img src="@mentor.ProfilePicture"
                         class="rounded-circle mx-auto mb-3 border"
                         style="width:80px;height:80px;object-fit:cover;" />
                }
                else
                {
                    <div class="avatar-circle fw-bold mx-auto mb-3 d-flex align-items-center justify-content-center fw-bold"
                         style="width:80px;height:80px;font-size:2rem;">
                        @mentor.FullName.Substring(0, 1)
                    </div>
                }


                <h5 class="fw-bold mb-1">@mentor.FullName</h5>

                <div class="badge bg-info">@mentor.Specialization</div>
                @if (mentor.Track != null)
                {
                    <div class="badge bg-info">@mentor.Track.Name</div>
                }
                else
                {
                    <div class="badge bg-secondary">General</div>
                }


                <span class="badge bg-light fw-bold border mb-3">@mentor.User?.Email</span>
                
                <div class="mb-2">
                    <small class="text-muted" style="font-size:0.7rem;">USERNAME</small>
                    <div class="fw-bold small">@mentor.User?.UserName</div>
                </div>
                <hr />

                <div class="d-flex justify-content-around text-start">
                    <div>
                        <small class="text-muted d-block uppercase" style="font-size:0.7rem;">STUDENTS</small>
                        <span class="fw-bold h5">
                            @(mentor.TrackId == null
                                ? ViewBag.TotalStudents
                               : mentor.Students.Count)
                        </span>
                    </div>
                    <div>
                        <small class="text-muted d-block uppercase" style="font-size:0.7rem;">STATUS</small>
                        <span class="badge bg-success">Active</span>
                    </div>
                    <a asp-action="EditMentor" asp-route-id="@mentor.Id"
                       class="btn btn-sm btn-outline-primary w-50 mb-2">
                        Edit Profile
                    </a>

                </div>
                <form asp-action="DeleteMentor" method="post" class="mt-2">
                    <input type="hidden" name="id" value="@mentor.Id" />
                    <button class="btn btn-sm btn-outline-danger w-100"
                            onclick="return confirm('Delete this mentor?')">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </form>
                <form asp-action="ResetUserPassword" method="post" class="mt-2">
                    <input type="hidden" name="userId" value="@mentor.UserId" />
                    <button class="btn btn-sm btn-outline-warning w-100">
                        <i class="fas fa-key"></i> Reset Password
                    </button>
                </form>

            </div>
        </div>
    }
</div>