@model IEnumerable<SPT.Models.ProgressLog>

@{
    ViewData["Title"] = "Review Pending Logs";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="fas fa-check-double"></i> Pending Verifications</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@Html.Raw(TempData["Success"])</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@Html.Raw(TempData["Error"])</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center p-5">
            <h4>🎉 All caught up!</h4>
            <p>There are no pending logs to review.</p>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-striped align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Date</th>
                            <th>Student</th>
                            <th>Module / Activity</th>
                            <th>Evidence</th>
                            <th style="width: 150px;">Claimed Hrs</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            <tr>
                                <td>@log.Date.ToString("MMM dd")</td>
                                <td>
                                    <strong>@log.Student.FullName</strong><br />
                                    <small class="text-muted">@log.Student.EnrollmentStatus</small>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@log.Module?.ModuleCode</span>
                                    <div class="small mt-1">@log.LessonCovered</div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(log.EvidenceLink))
                                    {
                                        <a href="@log.EvidenceLink" target="_blank" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-external-link-alt"></i> View Proof
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-danger fw-bold">No Evidence</span>
                                    }
                                </td>

                                <td>
                                    <form asp-action="ApproveLog" method="post" class="row g-1 align-items-center">
                                        <input type="hidden" name="id" value="@log.Id" />

                                        <div class="col-auto">
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text bg-light" title="Verified Hours"><i class="fas fa-clock"></i></span>
                                                <input type="number" name="verifiedHours" value="@log.Hours" step="0.5" class="form-control" style="width: 60px;" title="Verify Hours" />
                                            </div>
                                        </div>

                                        <div class="col-auto">
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text bg-light" title="Quiz Score"><i class="fas fa-star"></i></span>
                                                <input type="number" name="quizScore" class="form-control" placeholder="0-100" style="width: 60px;" title="Enter Quiz Score (Optional)" />
                                            </div>
                                        </div>

                                        <div class="col-auto">
                                            <button type="submit" name="action" value="Approve" class="btn btn-sm btn-success" title="Approve">
                                                <i class="fas fa-check"></i>
                                            </button>
                                            <button type="submit" name="action" value="Reject" class="btn btn-sm btn-danger" title="Reject" onclick="return confirm('Delete this log?');">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </form>
                                </td>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>