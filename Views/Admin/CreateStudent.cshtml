@model SPT.Models.Student

@{
    ViewData["Title"] = "Create Student";

    // We need the list of tracks to get the "Code" for JavaScript

    var tracks = ViewBag.TrackList as IEnumerable<SPT.Models.Track>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="mb-0">
                        <i class="fas fa-user-plus"></i> Create New Student
                    </h3>
                </div>
                <div class="card-body"
                @if (TempData["Error"] != null)

                {
        <div class="alert alert-danger fw-bold">@TempData["Error"]</div>
                }
                @if (TempData["Success"] != null)

                {
        <div class="alert alert-success fw-bold">@TempData["Success"]</div>
                }>

                    <form asp-action="CreateStudent" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">📋 Personal Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="FullName" class="form-label">Full Name *</label>
                                        <input asp-for="FullName" id="fullNameInput" class="form-control" placeholder="Surname Firstname" />
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label class="form-label text-primary fw-bold">Auto-Generated Username <i class="fas fa-magic"></i></label>
                                        <input type="text" id="usernameDisplay" class="form-control bg-light" readonly placeholder="Will appear here..." />
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Email" class="form-label">Email *</label>
                                        <input asp-for="Email" type="email" class="form-control" placeholder="student@example.com" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Phone" class="form-label">Phone Number *</label>
                                        <input asp-for="Phone" class="form-control" placeholder="+234 XXX XXX XXXX" />
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-12 mb-3">
                                        <label asp-for="Address" class="form-label">Address *</label>
                                        <textarea asp-for="Address" class="form-control" rows="2" placeholder="Full address"></textarea>
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Profile Picture</label>
                                        <input type="file" name="profilePicture" class="form-control" accept="image/*" />
                                        <small class="text-muted">Max 2MB, JPG/PNG only</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">🎓 Academic Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="TrackId" class="form-label">Track / Course *</label>
                                        <select asp-for="TrackId" id="trackSelect" class="form-select">
                                            <option value="" data-code="">-- Select Course --</option>
                                            @if (tracks != null)

                                            {

                                                foreach (var track in tracks)

                                                {
                                                    <option value="@track.Id" data-code="@track.Code">@track.Name</option>
                                                }

                                            }
                                        </select>
                                        <span asp-validation-for="TrackId" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="DateJoined" class="form-label">Start Date *</label>
                                        <input asp-for="DateJoined" id="dateInput" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                        <span asp-validation-for="DateJoined" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label class="form-label text-primary fw-bold">Auto-Generated Cohort <i class="fas fa-magic"></i></label>
                                        <input type="text" id="cohortDisplay" class="form-control bg-light" readonly placeholder="Will appear here..." />
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="MentorId" class="form-label">Assigned Mentor</label>
                                        <select asp-for="MentorId" class="form-select" asp-items="ViewBag.Mentors">
                                            <option value="">-- Assign Later --</option>
                                        </select>
                                        <span asp-validation-for="MentorId" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label class="form-label" style="font-weight:bold; color:blue;">Set Login Password *</label>
                                        <input type="text" name="password" class="form-control" placeholder="Enter initial password" required />
                                    </div>

                                    <input type="hidden" asp-for="TargetHoursPerWeek" value="25" />
                                    <input type="hidden" asp-for="EnrollmentStatus" value="Active" />
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">🚨 Emergency Contact</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="EmergencyContactName" class="form-label">Contact Name *</label>
                                        <input asp-for="EmergencyContactName" class="form-control" />
                                        <span asp-validation-for="EmergencyContactName" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="EmergencyContactPhone" class="form-label">Contact Phone *</label>
                                        <input asp-for="EmergencyContactPhone" class="form-control" />
                                        <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-12 mb-3">
                                        <label asp-for="EmergencyContactAddress" class="form-label">Contact Address</label>
                                        <textarea asp-for="EmergencyContactAddress" class="form-control" rows="2"></textarea>
                                        <span asp-validation-for="EmergencyContactAddress" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">🔗 Optional Links</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="GitHubUrl" class="form-label">GitHub (Optional)</label>
                                        <input asp-for="GitHubUrl" class="form-control" />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="PortfolioUrl" class="form-label">Portfolio (Optional)</label>
                                        <input asp-for="PortfolioUrl" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Students" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save"></i> Create Student
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // ... (Your JavaScript logic remains exactly the same as before) ...
            const fullNameInput = document.getElementById('fullNameInput');
            const usernameDisplay = document.getElementById('usernameDisplay');
            const trackSelect = document.getElementById('trackSelect');
            const dateInput = document.getElementById('dateInput');
            const cohortDisplay = document.getElementById('cohortDisplay');
            let nextStudentId = "001";

            fetch('/Admin/GetNextStudentId')
                .then(response => response.json())
                .then(data => {
                    nextStudentId = data.toString().padStart(3, '0');
                    updateUsername();
                });

            function updateUsername() {
                const fullName = fullNameInput.value.trim();
                if (fullName.length > 0) {
                    const parts = fullName.split(' ');
                    const surname = parts[0];
                    const initial = parts.length > 1 ? parts[1].charAt(0) : '';
                    usernameDisplay.value = `${surname}${initial}${nextStudentId}`;
                } else {
                    usernameDisplay.value = "";
                }
            }

            function updateCohort() {
                const selectedOption = trackSelect.options[trackSelect.selectedIndex];
                const trackCode = selectedOption.getAttribute('data-code');
                const dateValue = dateInput.value;
                if (trackCode && dateValue) {
                    const dateObj = new Date(dateValue);
                    const month = (dateObj.getMonth() + 1).toString().padStart(2, '0');
                    const year = dateObj.getFullYear().toString().slice(-2);
                    cohortDisplay.value = `${trackCode}${month}${year}`;
                } else {
                    cohortDisplay.value = "";
                }
            }

            fullNameInput.addEventListener('input', updateUsername);
            trackSelect.addEventListener('change', updateCohort);
            dateInput.addEventListener('change', updateCohort);
        });
    </script>
}