@model SPT.Models.Announcement
@Html.AntiForgeryToken()
@{
    ViewData["Title"] = "Post Announcement";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger">
                    <h5 class="mb-0"><i class="fas fa-bullhorn"></i> Broadcast Announcement</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateAnnouncement" method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="e.g. Server Maintenance" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Message</label>
                            <textarea asp-for="Message" class="form-control" rows="3" required></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Audience</label>
                            <select asp-for="Audience" class="form-select">
                                <option value="All">Everyone</option>
                                <option value="Students">Students Only</option>
                                <option value="Mentors">Mentors Only</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Show On Page</label>
                            <select asp-for="TargetPage" class="form-select" required>
                                <option value="Dashboard">Dashboard</option>
                                <option value="Curriculum">Curriculum</option>
                                <option value="Support">Support</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="fas fa-paper-plane"></i> Send Broadcast
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>