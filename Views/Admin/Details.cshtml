@model SPT.Models.Student
@{
    ViewData["Title"] = "Student Profile";
}

<div class="mb-3">
    <a asp-action="Students" class="btn btn-outline-secondary btn-sm"><i class="fas fa-arrow-left"></i> Back to List</a>
    <a asp-action="EditStudent" asp-route-id="@Model.Id" class="btn btn-primary btn-sm float-end"><i class="fas fa-edit"></i> Edit Student</a>
</div>

<div class="row g-4">
    <div class="col-lg-4 d-flex flex-column gap-4">
        <div class="custom-card text-center">
            <h5 class="card-title-custom text-start">Profile</h5>
            <div class="profile-img-container mx-auto">
                <img src="@(Model.ProfilePicture ?? "/images/default-avatar.png")" style="width:100%; height:100%; object-fit:cover;">
            </div>
            <h5 class="mt-3">@Model.FullName</h5>
            <span class="badge bg-success">@Model.EnrollmentStatus</span>
        </div>

        <div class="custom-card">
            <h5 class="card-title-custom">Emergency Contact</h5>
            <div class="d-flex flex-column gap-3">
                <div class="p-3 bg-light rounded">
                    <small class="text-muted d-block">Name</small>
                    <strong>@Model.EmergencyContactName</strong>
                </div>
                <div class="p-3 bg-light rounded">
                    <small class="text-muted d-block">Phone</small>
                    <strong>@Model.EmergencyContactPhone</strong>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="custom-card">
            <h5 class="card-title-custom">Academic Information</h5>
            <div class="mt-4">
                <div class="row mb-3 border-bottom pb-2">
                    <div class="col-md-4 text-muted fw-bold">Track</div>
                    <div class="col-md-8">@Model.Track?.Name</div>
                </div>
                <div class="row mb-3 border-bottom pb-2">
                    <div class="col-md-4 text-muted fw-bold">Cohort</div>
                    <div class="col-md-8">@Model.Cohort?.Name</div>
                </div>
                <div class="row mb-3 border-bottom pb-2">
                    <div class="col-md-4 text-muted fw-bold">Mentor</div>
                    <div class="col-md-8">@Model.Mentor?.FullName</div>
                </div>
                <div class="row mb-3 border-bottom pb-2">
                    <div class="col-md-4 text-muted fw-bold">Email</div>
                    <div class="col-md-8">@Model.Email</div>
                </div>
                <div class="row mb-3 border-bottom pb-2">
                    <div class="col-md-4 text-muted fw-bold">Phone</div>
                    <div class="col-md-8">@Model.Phone</div>
                </div>
                <div class="row mb-3 border-bottom pb-2">
                    <div class="col-md-4 text-muted fw-bold">Joined</div>
                    <div class="col-md-8">@Model.DateJoined.ToString("D")</div>
                </div>
            </div>
        </div>
    </div>
</div>