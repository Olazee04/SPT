@model IEnumerable<SPT.Models.AuditLog>
@{
    ViewData["Title"] = "System Audit Logs";
}

<div class="container-fluid p-4">
    <h2 class="mb-4 font-weight-bold text-gray-800">🔒 Security Audit Logs</h2>
    <div class="card shadow border-0 leaderboard-card">
        <div class="card shadow-sm border-0 leaderboard-card">

            <table class="table table-striped mb-0 leaderboard-card">
                <thead class="table-dark">
                    <tr>
                        <th>Time</th>
                        <th>Action</th>
                        <th>Details</th>
                        <th>Performed By</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model.OrderByDescending(m => m.Timestamp))
                    {
                        <tr>
                            <td>@log.Timestamp.ToString("g")</td>
                               <td><span class="badge 
@(log.Action.Contains("DELETE") ? "bg-danger" :
  log.Action.Contains("CREATE") ? "bg-success" :
  log.Action.Contains("LOGIN") ? "bg-primary" :
  log.Action.Contains("REJECT") ? "bg-warning" :
  "bg-secondary")">
                                    @log.Action
    </span>
    </td>
                            <td>@log.Details</td>
                            <td class="font-weight-bold">@log.PerformedBy</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>