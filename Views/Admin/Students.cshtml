@model IEnumerable<SPT.Models.Student>

@{
    ViewData["Title"] = "All Students";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-users"></i> All Students</h2>
        <a asp-action="CreateStudent" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Student
        </a>
    </div>

    @if (TempData["Success"] != null)

    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Html.Raw(TempData["Success"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Full Name</th>
                        <th>Username</th>
                        <th>Course</th>
                        <th>Cohort</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>DateJoined</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int sn = 1;
                    }
                    @foreach (var s in Model)

                    {
                        <tr>
                            <td>@sn</td>
                            <td>
                                <div class="fw-bold">@s.FullName</div>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark border">
                                    @(s.User != null ? s.User.UserName : "No User")
                                </span>
                            </td>
                            <td>@s.Track?.Code</td>
                            <td>@s.Cohort?.Name</td>
                            <td>@s.Phone</td>
                            <td>
                                <div class="text-muted">@s.Email</div>
                            </td>
                            <td>@s.DateJoined</td>
                            <td>
                                @if (s.EnrollmentStatus == "Active")
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@s.EnrollmentStatus</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-sm btn-info text-white" title="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="EditStudent" asp-route-id="@s.Id" class="btn btn-sm btn-warning text-dark" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                        sn++;

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>










