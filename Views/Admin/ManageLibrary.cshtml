@model List<SPT.Models.Resource>
@{
    ViewData["Title"] = "Manage Library";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="fw-bold"><i class="fas fa-book me-2"></i> Library Resources</h4>
    <a asp-action="CreateResource" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i> Add Resource
    </a>
</div>

<div class="custom-card p-0">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Title</th>
                    <th>Type</th>
                    <th>Track</th>
                    <th>Added</th>
                    <th class="text-end pe-4">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">
                                <a href="@item.Url" target="_blank" class="text-decoration-none">@item.Title</a>
                                <div class="small text-muted">@item.Description</div>
                            </td>
                            <td>
                                @if (item.Type == "Video")
                                {
                                    <span class="badge bg-danger"><i class="fab fa-youtube"></i> Video</span>
                                }
                                else if (item.Type == "PDF")
                                {
                                    <span class="badge bg-warning text-dark"><i class="fas fa-file-pdf"></i> PDF</span>
                                }
                                else
                                {
                                    <span class="badge bg-info"><i class="fas fa-link"></i> Link</span>
                                }
                            </td>
                            <td><span class="badge bg-secondary">@item.Track?.Code</span></td>
                            <td class="small text-muted">@item.CreatedAt.ToString("MMM dd")</td>
                            <td class="text-end pe-4">
                                <form asp-action="DeleteResource" method="post" onsubmit="return confirm('Delete this resource?');">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="5" class="text-center py-5">No resources found. Add one!</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>