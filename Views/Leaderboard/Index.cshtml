@model List<SPT.Models.LeaderboardViewModel>

@{
    ViewData["Title"] = "Leaderboard";
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="fw-bold"><i class="fas fa-trophy text-warning"></i> Hall of Fame</h1>
        <p class="text-muted">Top performers based on verified coding hours.</p>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="text-center" style="width: 80px;">Rank</th>
                            <th>Student</th>
                            <th class="text-center">Track</th>
                            <th class="text-center">Consistency</th>
                            <th class="text-end pe-4">Verified Hours</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            // Highlight the logged-in user
                            string rowClass = student.IsCurrentUser ? "table-primary border-primary" : "";

                            <tr class="@rowClass">
                                <td class="text-center">
                                    @if (student.Rank == 1)
                                    {
                                        <span class="fs-4">🥇</span>
                                    }
                                    else if (student.Rank == 2)
                                    {
                                        <span class="fs-4">🥈</span>
                                    }
                                    else if (student.Rank == 3)
                                    {
                                        <span class="fs-4">🥉</span>
                                    }
                                    else
                                    {
                                        <span class="fw-bold text-muted">#@student.Rank</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@(student.ProfilePicture ?? "/images/default-avatar.png")"
                                             class="rounded-circle me-3 border"
                                             style="width: 45px; height: 45px; object-fit: cover;" />
                                        <div>
                                            <h6 class="mb-0 fw-bold">
                                                @student.StudentName
                                                @if (student.IsCurrentUser)
                                                {
                                                    <span class="badge bg-primary ms-2" style="font-size: 0.6em;">YOU</span>
                                                }
                                            </h6>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-secondary">@student.TrackCode</span>
                                </td>
                                <td class="text-center">
                                    @{
                                        string color = student.ConsistencyScore >= 80 ? "success" :
                                        (student.ConsistencyScore >= 50 ? "warning" : "danger");
                                    }
                                    <div class="d-flex align-items-center justify-content-center">
                                        <span class="text-@color fw-bold me-2">@student.ConsistencyScore%</span>
                                        <div class="progress" style="width: 60px; height: 6px;">
                                            <div class="progress-bar bg-@color" role="progressbar" style="width: @student.ConsistencyScore%"></div>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-end pe-4">
                                    <h5 class="mb-0 fw-bold text-success">@student.TotalHours</h5>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>