<div class="container-fluid mt-4">
    <h2 class="fw-bold mb-4">
        🏆 Leaderboards
    </h2>

    <div class="row g-4">

        <!-- COMPLETED MODULES -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 leaderboard-card">
                <div class="card-header bg-primary fw-bold">
                    📘 Completed Modules
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var s in Model.CompletedModules)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>
                                @s.FullName
                                <small class="text-muted">(@s.Cohort)</small>
                            </span>
                            <span class="badge bg-primary rounded-pill">@s.Score</span>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- ACTIVE THIS WEEK -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 leaderboard-card">
                <div class="card-header bg-success fw-bold">
                    ⚡ Active This Week
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var s in Model.ActiveThisWeek)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>@s.FullName</span>
                            <span class="badge bg-success rounded-pill">@s.Score</span>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- CONSISTENCY -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 leaderboard-card">
                <div class="card-header bg-warning fw-bold">
                    🔁 Consistency (Last 30 Days)
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var s in Model.Consistency)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>@s.FullName</span>
                            <span class="badge bg-warning fw-bold rounded-pill">
                                @s.Score%
                            </span>
                        </li>
                    }
                </ul>
            </div>
        </div>

        
        <!-- TODAY -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 leaderboard-card">
                <div class="card-header bg-info fw-bold">
                    📅 Active Today
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var s in Model.ActiveToday)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>@s.FullName</span>
                            <span class="badge bg-info rounded-pill">@s.Score</span>
                        </li>
                    }
                </ul>
            </div>
        </div>

    </div>
</div>
