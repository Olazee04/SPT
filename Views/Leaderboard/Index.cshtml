@model List<SPT.Models.ViewModels.LeaderboardViewModel>

@{
    ViewData["Title"] = "Leaderboard";
}

<div class="container-fluid p-4">
    <div class="text-center mb-5">
        <h1 class="font-weight-bold text-gray-800"><i class="fas fa-trophy text-warning mr-2"></i> Academy Leaderboard</h1>
        <p class="text-muted">Ranking based on verified learning hours.</p>
    </div>

    @if (Model.Count >= 3)
    {
        <div class="row justify-content-center align-items-end mb-5">
            <div class="col-md-3 text-center mb-4 mb-md-0 order-2 order-md-1">
                <div class="card border-0 shadow-sm transform-hover" style="margin-top: 20px;">
                    <div class="card-body">
                        <div class="badge badge-secondary rounded-circle p-2 mb-2" style="width: 40px; height: 40px; font-size: 1.2rem;">2</div>
                        <img src="@(string.IsNullOrEmpty(Model[1].ProfilePicture) ? "/img/default-profile.png" : Model[1].ProfilePicture)"
                             class="rounded-circle border border-secondary p-1 mb-3" width="80" height="80" style="object-fit:cover;">
                        <h5 class="font-weight-bold mb-0">@Model[1].FullName</h5>
                        <small class="text-muted">@Model[1].Track</small>
                        <h4 class="text-primary font-weight-bold mt-2">@Model[1].TotalHours <small>hrs</small></h4>
                    </div>
                </div>
            </div>

            <div class="col-md-4 text-center order-1 order-md-2">
                <div class="card border-0 shadow transform-hover bg-primary text-white">
                    <div class="card-body py-5">
                        <i class="fas fa-crown text-warning fa-2x mb-2"></i>
                        <img src="@(string.IsNullOrEmpty(Model[0].ProfilePicture) ? "/img/default-profile.png" : Model[0].ProfilePicture)"
                             class="rounded-circle border border-warning p-1 mb-3 bg-white" width="100" height="100" style="object-fit:cover;">
                        <h4 class="font-weight-bold mb-0">@Model[0].FullName</h4>
                        <small class="text-white-50">@Model[0].Track</small>
                        <h2 class="font-weight-bold mt-3 text-warning">@Model[0].TotalHours <small class="text-white small">hrs</small></h2>
                    </div>
                </div>
            </div>

            <div class="col-md-3 text-center order-3 order-md-3">
                <div class="card border-0 shadow-sm transform-hover" style="margin-top: 40px;">
                    <div class="card-body">
                        <div class="badge badge-dark rounded-circle p-2 mb-2" style="width: 40px; height: 40px; font-size: 1.2rem; background: #cd7f32;">3</div>
                        <img src="@(string.IsNullOrEmpty(Model[2].ProfilePicture) ? "/img/default-profile.png" : Model[2].ProfilePicture)"
                             class="rounded-circle border p-1 mb-3" style="border-color: #cd7f32 !important;" width="80" height="80" style="object-fit:cover;">
                        <h5 class="font-weight-bold mb-0">@Model[2].FullName</h5>
                        <small class="text-muted">@Model[2].Track</small>
                        <h4 class="text-primary font-weight-bold mt-2">@Model[2].TotalHours <small>hrs</small></h4>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 font-weight-bold text-primary">Full Rankings</h6>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="pl-4">Rank</th>
                        <th>Student</th>
                        <th>Cohort</th>
                        <th class="text-center">Logs</th>
                        <th class="text-right pr-4">Total Hours</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.Rank <= 3 ? "bg-light font-weight-bold" : "")">
                            <td class="pl-4">#@item.Rank</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@(string.IsNullOrEmpty(item.ProfilePicture) ? "/img/default-profile.png" : item.ProfilePicture)"
                                         class="rounded-circle mr-3" width="30" height="30">
                                    <div>
                                        <span>@item.FullName</span>
                                        <span class="badge badge-light border ml-2">@item.Track</span>
                                    </div>
                                </div>
                            </td>
                            <td>@item.Cohort</td>
                            <td class="text-center">@item.LogCount</td>
                            <td class="text-right pr-4 text-primary font-weight-bold">@item.TotalHours</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .transform-hover { transition: transform 0.3s ease; }
    .transform-hover:hover { transform: translateY(-10px); }
</style>