@model List<SPT.Models.ViewModels.AttendanceSummaryViewModel>
@{
    DateTime fromDate = ViewBag.From ?? DateTime.UtcNow.AddDays(-6);
    DateTime toDate = ViewBag.To ?? DateTime.UtcNow;
}
@{
    ViewData["Title"] = "Attendance Records";
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="font-weight-bold text-gray-800">Attendance History</h2>
        
    </div>

    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body bg-light">
            <form method="get" class="form-inline">
                <label class="mr-2">Date:</label>
                <input type="date"
                       name="startDate"
                       class="form-control"
                       value="@fromDate.ToString("yyyy-MM-dd")" />

                <input type="date"
                       name="endDate"
                       class="form-control"
                       value="@toDate.ToString("yyyy-MM-dd")" />

                <label class="mr-2">Cohort:</label>
                <select name="cohortId"
                        class="form-control mr-3"
                        asp-items="ViewBag.Cohorts">
                    <option value="">All Cohorts</option>
                </select>

                <button type="submit" class="btn btn-dark">Filter</button>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover">
                <thead class="bg-light">
                    <tr>
                        <th>Student</th>
                        <th>Cohort</th>
                        <th class="text-center">Present</th>
                        <th class="text-center">Absent</th>
                        <th class="text-center">Office</th>
                        <th class="text-center">Remote</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.StudentName</td>
                            <td>@item.CohortName</td>

                            <td class="text-center">
                                <span class="badge bg-success">@item.PresentDays</span>
                            </td>

                            <td class="text-center">
                                <span class="badge bg-danger">@item.AbsentDays</span>
                            </td>

                            <td class="text-center">
                                <span class="badge bg-primary">@item.OfficeDays</span>
                            </td>

                            <td class="text-center">
                                <span class="badge bg-info text-dark">@item.RemoteDays</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>