@model List<SPT.Models.Resource>
@{
    ViewData["Title"] = "Resource Library";
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="fw-bold"><i class="fas fa-book-reader text-primary"></i> Learning Library</h1>
        <p class="text-muted">Curated resources specifically for your track.</p>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center p-5">
            <i class="fas fa-folder-open fa-3x mb-3 opacity-50"></i>
            <h5>Library Empty</h5>
            <p>Your mentors haven't uploaded any resources for this track yet.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="custom-card h-100 d-flex flex-column border-0 shadow-sm transition-hover">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="icon-btn bg-light text-primary" style="width:50px; height:50px; font-size:1.2rem;">
                                @if (item.Type == "Video")
                                {
                                    <i class="fab fa-youtube text-danger"></i>
                                }
                                else if (item.Type == "PDF")
                                {
                                    <i class="fas fa-file-pdf text-warning"></i>
                                }
                                else
                                {
                                    <i class="fas fa-link text-info"></i>
                                }
                            </div>
                            <span class="badge bg-light text-dark border">@item.CreatedAt.ToString("MMM dd")</span>
                        </div>

                        <h5 class="fw-bold text-dark mb-2">@item.Title</h5>
                        <p class="text-muted small flex-grow-1">
                            @(string.IsNullOrEmpty(item.Description) ? "No description available." : item.Description)
                        </p>

                        <a href="@item.Url" target="_blank" class="btn btn-outline-primary w-100 fw-bold mt-3">
                            View Resource <i class="fas fa-external-link-alt ms-2"></i>
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    /* Add hover effect for cards */
    .transition-hover {
        transition: transform 0.2s ease-in-out;
    }
    .transition-hover:hover {
        transform: translateY(-5px);
    }
</style>