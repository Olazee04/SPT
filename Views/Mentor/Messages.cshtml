@model List<SPT.Models.Student>
@{
    ViewData["Title"] = "Messages";
    var mentors = ViewBag.OtherMentors as List<SPT.Models.Mentor>;
}

<div class="container-fluid p-4">
    <h4 class="fw-bold mb-4"><i class="fas fa-envelope me-2"></i> Send a Message</h4>

    @* STUDENTS *@
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-primary text-white fw-bold">
            <i class="fas fa-user-graduate me-2"></i> My Students
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted small text-uppercase">
                    <tr>
                        <th class="ps-4">Name</th>
                        <th>Email</th>
                        <th class="text-end pe-4">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <img src="@(s.ProfilePicture ?? "/images/default-avatar.png")"
                                         class="rounded-circle me-2 border"
                                         style="width:35px;height:35px;object-fit:cover;" />
                                    <span class="fw-bold">@s.FullName</span>
                                </div>
                            </td>
                            <td class="text-muted">@s.Email</td>
                            <td class="text-end pe-4">
                                <a href="mailto:@s.Email"
                                   class="btn btn-sm btn-primary">
                                    <i class="fas fa-paper-plane me-1"></i> Send Email
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @* OTHER MENTORS *@
    @if (mentors != null && mentors.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="card-header bg-dark text-white fw-bold">
                <i class="fas fa-chalkboard-teacher me-2"></i> Other Mentors
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted small text-uppercase">
                        <tr>
                            <th class="ps-4">Name</th>
                            <th>Email</th>
                            <th class="text-end pe-4">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in mentors)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(m.ProfilePicture))
                                        {
                                            <img src="@m.ProfilePicture"
                                                 class="rounded-circle me-2 border"
                                                 style="width:35px;height:35px;object-fit:cover;" />
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-secondary text-white me-2 d-flex align-items-center justify-content-center fw-bold"
                                                 style="width:35px;height:35px;">
                                                @m.FullName.Substring(0, 1)
                                            </div>
                                        }
                                        <span class="fw-bold">@m.FullName</span>
                                    </div>
                                </td>
                                <td class="text-muted">@(m.User?.Email ?? "—")</td>
                                <td class="text-end pe-4">
                                    <a href="mailto:@(m.User?.Email)"
                                       class="btn btn-sm btn-outline-dark">
                                        <i class="fas fa-paper-plane me-1"></i> Send Email
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>