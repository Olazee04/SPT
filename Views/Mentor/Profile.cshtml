@model SPT.Models.Mentor
@{
    ViewData["Title"] = "My Profile";
}

<div class="row g-4">

    <div class="col-lg-4">

        <div class="custom-card text-center">

            <h5 class="card-title-custom">Profile Picture</h5>

            <img src="@(Model.ProfilePicture ?? "/images/default-avatar.png")"
                 class="rounded-circle mb-3"
                 style="width:140px;height:140px;object-fit:cover;" />

            <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                <label class="btn btn-primary w-100">
                    Change Photo
                    <input type="file" name="profilePicture" hidden onchange="this.form.submit()" />
                </label>
            </form>

        </div>

        <div class="custom-card mt-3">
            <h5 class="card-title-custom">🔐 Change Password</h5>

            <form asp-action="UpdateProfile" method="post">
                <input type="password" name="currentPassword" class="form-control mb-2" placeholder="Current Password" />
                <input type="password" name="newPassword" class="form-control mb-2" placeholder="New Password" />
                <button class="btn btn-primary w-100">Update Password</button>
            </form>

        </div>

    </div>

    <div class="col-lg-8">

        <div class="custom-card">

            <h5 class="card-title-custom">Mentor Information</h5>

            <div class="form-row-custom">
                <span class="form-label-custom">Full Name: </span>
                <span class="form-value-custom">@Model.FullName</span>
            </div>

            <div class="form-row-custom">
                <span>Email: </span>
                <span>@Model.User?.Email</span>
            </div>

            <div class="form-row-custom">
                <span>Specialization: </span>
                <span class="badge bg-info">
                    @(Model.Track?.Name ?? Model.Specialization ?? "General")
                </span>
            </div>

            <div class="form-row-custom">
                <span>Phone: </span>
                <span>@Model.Phone</span>
            </div>

            <div class="form-row-custom">
                <span>Address: </span>
                <span>@Model.Address</span>
            </div>

            <div class="form-row-custom">
                <span>Next of Kin: </span>
                <span>@Model.NextOfKin</span>
            </div>

            <div class="form-row-custom">
                <span>Next of Kin Phone: </span>
                <span>@Model.NextOfKinPhone</span>
            </div>

            <div class="form-row-custom">
                <span>Next of Kin Address: </span>
                <span>@Model.NextOfKinAddress</span>
            </div>

        </div>

    </div>

</div>
