@model List<SPT.Models.Capstone>

@{
    ViewData["Title"] = "Capstone Reviews";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="fas fa-project-diagram text-primary"></i>
        Capstone Reviews
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No capstone submissions yet.
        </div>
        return;
    }

    <div class="card shadow-sm leaderboard-card">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Student</th>
                        <th>Cohort</th>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Submitted</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td class="fw-bold">@c.Student.FullName</td>
                            <td>@c.Student.Cohort?.Name</td>
                            <td>@c.Title</td>
                            <td>
                                <span class="badge
                                    @(c.Status == CapstoneStatus.Approved ? "bg-success" :
                                      c.Status == CapstoneStatus.Rejected ? "bg-danger" :
                                      "bg-warning text-dark")">
                                    @c.Status
                                </span>
                            </td>
                            <td>@c.SubmittedAt.ToString("MMM dd, yyyy")</td>
                            <td class="text-end">
                                <a asp-action="Review"
                                   asp-route-id="@c.Id"
                                   class="btn btn-sm btn-outline-primary">
                                    Review
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
