@model SPT.Models.Capstone
@{
    ViewData["Title"] = "Capstone Project";
}

<div class="container p-4">
    <h2 class="mb-4 font-weight-bold">🚀 Capstone Project</h2>

    @if (Model == null)
    {
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="Submit" method="post">
                    <div class="form-group mb-3">
                        <label class="font-weight-bold">Project Title</label>
                        <input name="Title" class="form-control" required />
                    </div>
                    <div class="form-group mb-3">
                        <label class="font-weight-bold">Description</label>
                        <textarea name="Description" class="form-control" rows="4" required></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="font-weight-bold">GitHub Repo URL</label>
                            <input name="GitHubUrl" class="form-control" type="url" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="font-weight-bold">Live Demo URL</label>
                            <input name="LiveUrl" class="form-control" type="url" required />
                        </div>
                    </div>
                    <button class="btn btn-primary btn-lg w-100">Submit Project</button>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow border-left-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h3>@Model.Title</h3>
                    <span class="badge @(Model.Status == "Approved" ? "badge-success" : "badge-warning") p-2">@Model.Status</span>
                </div>
                <p class="mt-3">@Model.Description</p>
                <div class="mt-4">
                    <a href="@Model.GitHubUrl" target="_blank" class="btn btn-dark mr-2"><i class="fab fa-github"></i> Code</a>
                    <a href="@Model.LiveUrl" target="_blank" class="btn btn-success"><i class="fas fa-globe"></i> Live Demo</a>
                </div>

                @if (!string.IsNullOrEmpty(Model.MentorFeedback))
                {
                    <div class="alert alert-info mt-4">
                        <strong>Mentor Feedback:</strong> @Model.MentorFeedback
                    </div>
                }
            </div>
        </div>
    }
</div>