@model IEnumerable<SPT.Models.Certificate>
@{
    ViewData["Title"] = "Certificates";
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="font-weight-bold text-gray-800"><i class="fas fa-certificate text-warning mr-2"></i> Certificates</h2>
        <a asp-action="Eligibility" class="btn btn-success shadow-sm">
            <i class="fas fa-user-graduate mr-1"></i> Check Eligibility & Issue
        </a>
    </div>

    <div class="card shadow-sm border-0 leaderboard-card">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="pl-4">Certificate ID</th>
                        <th>Student</th>
                        <th>Track</th>
                        <th>Date Issued</th>
                        <th class="text-right pr-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="pl-4"><span class="badge badge-light border">@item.CertificateId</span></td>
                            <td class="font-weight-bold">@item.Student.FullName</td>
                            <td>@item.TrackName</td>
                            <td>@item.DateIssued.ToString("MMM dd, yyyy")</td>
                            <td class="text-right pr-4">
                                <a asp-action="ViewCertificate" asp-route-id="@item.CertificateId" target="_blank" class="btn btn-sm btn-primary">
                                    <i class="fas fa-print"></i> View / Print
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>