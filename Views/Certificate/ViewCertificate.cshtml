@model SPT.Models.Certificate
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Certificate - @Model.Student.FullName</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
        body { background: #f0f0f0; display: flex; justify-content: center; align-items: center; height: 100vh; font-family: 'Georgia', serif; }
        .cert-container {
            width: 900px; height: 600px; background: white; padding: 40px;
            border: 10px solid #ddd;
            position: relative;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            text-align: center;
        }
        .border-inner { border: 2px solid #2c3e50; height: 100%; padding: 20px; box-sizing: border-box; }
        .logo { font-size: 40px; color: #2c3e50; margin-bottom: 20px; }
        h1 { font-size: 40px; color: #2c3e50; text-transform: uppercase; letter-spacing: 2px; margin: 0; }
        .sub-text { font-size: 18px; color: #7f8c8d; margin-top: 10px; }
        .student-name { font-size: 45px; color: #2980b9; margin: 30px 0; border-bottom: 2px solid #eee; display: inline-block; padding-bottom: 10px; font-family: 'Arial', sans-serif; font-weight: bold; }
        .course-name { font-size: 24px; font-weight: bold; margin-bottom: 40px; }
        .date-section { position: absolute; bottom: 60px; left: 60px; text-align: left; }
        .sign-section { position: absolute; bottom: 60px; right: 60px; text-align: center; }
        .sign-line { width: 200px; border-top: 1px solid #333; margin-top: 10px; }
        .badge-icon { position: absolute; bottom: 40px; left: 50%; transform: translateX(-50%); color: #f1c40f; font-size: 80px; opacity: 0.8; }

        @@media print {
            body { background: white; }
            .cert-container { box-shadow: none; border: 5px solid #333; width: 100%; height: 100%; }
        }
    </style>
</head>
<body>
    <div class="cert-container">
        <div class="border-inner">
            <div class="logo"><i class="fas fa-graduation-cap"></i> SPT Academy</div>

            <div class="sub-text">This is to certify that</div>
            <div class="student-name">@Model.Student.FullName</div>

            <div class="sub-text">has successfully completed the curriculum for</div>
            <div class="course-name">@Model.TrackName</div>

            <p style="color:#555; max-width: 600px; margin: 0 auto; line-height:1.5;">
                Demonstrating excellence, dedication, and proficiency in all required modules and capstone projects.
            </p>

            <i class="fas fa-medal badge-icon"></i>

            <div class="date-section">
                <strong>@Model.DateIssued.ToString("MMMM dd, yyyy")</strong>
                <div class="sign-line">Date Issued</div>
            </div>

            <div class="sign-section">
                <img src="https://upload.wikimedia.org/wikipedia/commons/f/f8/Signature_sample.svg" height="40" style="opacity:0.7" />
                <div class="sign-line">Program Director</div>
            </div>

            <div style="position:absolute; top:20px; right:20px; font-size:12px; color:#ccc;">
                ID: @Model.CertificateId
            </div>
        </div>
    </div>

    <script>
        // Auto print prompt
        // window.print();
    </script>
</body>
</html>