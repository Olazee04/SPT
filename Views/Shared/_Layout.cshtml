@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SPT.Data.ApplicationDbContext Db

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RMSys SPT Portal</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script>
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme === 'dark') {
            document.documentElement.setAttribute('data-bs-theme', 'dark');
        }
    </script>
</head>

<body>

    @if (User.Identity.IsAuthenticated)
    {
        <div id="wrapper">

            <div id="sidebar-wrapper">
                <div class="sidebar-heading">
                    <i class="fas fa-graduation-cap me-2"></i> RMSys SPT <span class="fw-light">PORTAL</span>
                </div>

                <div class="list-group list-group-flush w-100 flex-grow-1">

                    @if (User.IsInRole("Student"))
                    {
                        <div class="sidebar-header-label">Student Area</div>
                        <a asp-controller="Student" asp-action="Dashboard" class="list-group-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active-link" : "")">
                            <i class="fas fa-home"></i> Dashboard
                        </a>
                        <a asp-controller="Student" asp-action="Curriculum" class="list-group-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Curriculum" ? "active-link" : "")">
                            <i class="fas fa-book"></i> Curriculum
                        </a>
                        <a asp-controller="Leaderboard" asp-action="Index" class="list-group-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Leaderboard" ? "active-link" : "")">
                            <i class="fas fa-trophy"></i> Leaderboard
                        </a>
                        <a asp-controller="Library" asp-action="Index" class="list-group-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Library" ? "active-link" : "")">
                            <i class="fas fa-folder-open"></i> Resources
                        </a>

                        @if (User.IsInRole("Student") && (ViewBag.CapstoneUnlocked ?? false))
                        {
                            <a asp-controller="Capstone" asp-action="Index" class="list-group-item">
                                <i class="fas fa-rocket"></i> Capstone
                            </a>
                        }

                        @if (ViewBag.CanViewCertificate == true)
                        {
                            <a asp-controller="Student" asp-action="Certificate" class="list-group-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Certificate" ? "active-link" : "")">
                                <i class="fas fa-certificate text-warning"></i> Certificate
                            </a>
                        }
                        else
                        {
                            <a href="javascript:void(0)" class="list-group-item disabled text-muted" title="Complete all required modules to unlock certificate">
                                <i class="fas fa-lock"></i> Certificate (Locked)
                            </a>
                        }

                        <div class="sidebar-header-label">Account</div>
                        <a asp-controller="Support" asp-action="Index" class="list-group-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Support" ? "active-link" : "")">
                            <i class="fas fa-headset"></i> Help & Support
                        </a>
                        <a asp-controller="Student" asp-action="Settings" class="list-group-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Settings" ? "active-link" : "")">
                            <i class="fas fa-cog"></i> Settings
                        </a>
                    }

                    @if (User.IsInRole("Mentor") || User.IsInRole("Admin"))
                    {
                        <div class="sidebar-header-label">Management</div>

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Admin" asp-action="Dashboard" class="list-group-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active-link" : "")">
                                <i class="fas fa-tachometer-alt"></i> Master Dashboard
                            </a>
                            <a asp-controller="Admin" asp-action="ProgressLogs" class="list-group-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "ProgressLogs" ? "active-link" : "")">
                                <i class="fas fa-clipboard-check"></i> Review Logs
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Mentor" asp-action="Dashboard" class="list-group-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active-link" : "")">
                                <i class="fas fa-chart-line"></i> Mentor Dashboard
                            </a>
                        }

                        @if (User.IsInRole("Mentor"))
                        {
                            <a asp-controller="Mentor" asp-action="Students" class="list-group-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Students" ? "active-link" : "")">
                                <i class="fas fa-users"></i> My Mentees
                            </a>
                            <a asp-controller="Mentor" asp-action="Messages" class="list-group-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Messages" ? "active-link" : "")">
                                <i class="fas fa-comment-dots"></i> Message A Student
                            </a>
                            <a asp-controller="Mentor" asp-action="Profile" class="list-group-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Profile" ? "active-link" : "")">
                                <i class="fas fa-user-cog"></i> My Profile
                            </a>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Mentor" asp-action="QuizScores">
                                    <i class="fas fa-star me-2"></i> Quiz Scores
                                </a>
                            </li>
                        }

                        <a asp-controller="Attendance" asp-action="Index" class="list-group-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Attendance" ? "active-link" : "")">
                            <i class="fas fa-calendar-check"></i> Attendance
                        </a>
                        <a asp-controller="MentorCapstone" asp-action="Index" class="list-group-item">
                            <i class="fas fa-project-diagram"></i> Capstone Reviews
                        </a>
                        <a asp-controller="Leaderboard" asp-action="Index" class="list-group-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Leaderboard" ? "active-link" : "")">
                            <i class="fas fa-trophy"></i> Leaderboard
                        </a>
                        <a asp-controller="Admin" asp-action="ManageLibrary" class="list-group-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "ManageLibrary" ? "active-link" : "")">
                            <i class="fas fa-book"></i> Resource Library
                        </a>
                        <a asp-controller="Quiz" asp-action="Index" class="list-group-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active-link" : "")">
                            <i class="fas fa-question-circle"></i> Manage Quizzes
                        </a>
                        <a asp-controller="Admin" asp-action="CreateAnnouncement" class="list-group-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "CreateAnnouncement" ? "active-link" : "")">
                            <i class="fas fa-bullhorn"></i> Post Announcements
                        </a>
                        <a asp-controller="Admin" asp-action="SupportTickets" class="list-group-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "SupportTickets" ? "active-link" : "")">
                            <i class="fas fa-life-ring"></i> Help Desk
                        </a>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <div class="sidebar-header-label">System Admin</div>
                     
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="QuizScores">
                                    <i class="fas fa-star me-2"></i> Quiz Scores
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Students">
                                    <i class="fas fa-user-graduate me-2"></i> Students
                                </a>
                            </li>
                        
                        <a class="list-group-item" href="#userSubmenu" data-bs-toggle="collapse">
                            <i class="fas fa-users-cog"></i> Users & Cohorts
                        </a>
                        <div class="collapse bg-dark bg-opacity-50" id="userSubmenu">
                            <a asp-controller="Admin" asp-action="Students" class="list-group-item ps-5 small text-white-50"><i class="fas fa-angle-right me-2"></i> Students</a>
                            <a asp-controller="Admin" asp-action="Mentors" class="list-group-item ps-5 small text-white-50"><i class="fas fa-angle-right me-2"></i> Mentors</a>
                            <a asp-controller="Cohort" asp-action="Index" class="list-group-item ps-5 small text-white-50"><i class="fas fa-angle-right me-2"></i> Cohorts</a>
                        </div>

                        <a asp-controller="Certificate" asp-action="Index" class="list-group-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Certificate" ? "active-link" : "")">
                            <i class="fas fa-certificate"></i> Issue Certificates
                        </a>
                        <a asp-controller="Admin" asp-action="AuditLogs" class="list-group-item text-warning @(ViewContext.RouteData.Values["Action"]?.ToString() == "AuditLogs" ? "active-link" : "")">
                            <i class="fas fa-shield-alt"></i> Audit Logs
                        </a>
                    }

                </div>

                <div class="sidebar-footer">
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                        <button type="submit" class="btn btn-outline-light w-100 btn-sm fw-bold">
                            <i class="fas fa-sign-out-alt me-2"></i> Log Out
                        </button>
                    </form>
                    <div class="text-center mt-3 small text-muted opacity-50">
                        &copy; 2026 RMSys Solution
                    </div>
                </div>
            </div>

            <div id="page-content-wrapper" class="w-100">

                @{
                    var currentUser = await UserManager.GetUserAsync(User);
                    string avatarUrl = null;
                    if (currentUser != null)
                    {
                        var mentor = Db.Mentors.FirstOrDefault(m => m.UserId == currentUser.Id);
                        var student = Db.Students.FirstOrDefault(s => s.UserId == currentUser.Id);
                        avatarUrl = mentor?.ProfilePicture ?? student?.ProfilePicture;
                    }
                }

                <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm px-4 py-3">
                    <h4 class="m-0 fw-bold text-dark">@ViewData["Title"]</h4>

                    <div class="d-flex align-items-center ms-auto">

                        <!-- Theme Toggle -->
                        <button class="btn btn-light rounded-circle me-3" id="theme-toggle" title="Toggle Mode">
                            <i class="fas fa-moon"></i>
                        </button>

                        <!-- Notifications -->
                        <div class="dropdown me-3">
                            <a class="nav-link position-relative" href="#" data-bs-toggle="dropdown">
                                <i class="fas fa-bell fa-lg text-secondary"></i>
                                <span id="notif-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display:none;font-size:.6rem;">0</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end shadow border-0 p-0" style="width:320px;">
                                <div class="bg-primary text-white p-2 text-center small fw-bold">NOTIFICATIONS</div>
                                <div id="notif-list" style="max-height:300px;overflow-y:auto;"></div>
                                <div class="p-2 border-top text-center bg-light">
                                    <a class="small fw-bold text-decoration-none" href="#" onclick="markAllRead()">Mark All as Read</a>
                                </div>
                            </div>
                        </div>

                        <!-- User Info & Avatar -->
                        <div class="d-flex align-items-center border-start ps-3">
                            <div class="text-end me-3 d-none d-lg-block">
                                <div class="small fw-bold text-dark">@User.Identity.Name</div>
                                <div class="badge bg-secondary">
                                    @User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(avatarUrl))
                            {
                                <img src="@avatarUrl" class="rounded-circle shadow-sm" style="width:40px;height:40px;object-fit:cover;" />
                            }
                            else
                            {
                                <div class="rounded-circle bg-dark text-white d-flex align-items-center justify-content-center fw-bold" style="width:40px;height:40px;">
                                    @(User.Identity.Name?.Substring(0, 1).ToUpper() ?? "U")
                                </div>
                            }
                        </div>

                    </div>
                </nav>

               <div class="container-fluid p-4">

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @RenderBody()
</div>

            </div>

        </div>
    }
    else
    {
        <!-- Public navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm px-4 py-3">
            <div class="d-flex w-100 justify-content-between align-items-center">
                <h4 class="m-0 fw-bold text-dark">@ViewData["Title"]</h4>
            </div>
        </nav>

        <div class="container py-4">
            @RenderBody()
        </div>
    }

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    @if (User.Identity.IsAuthenticated)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                fetchNotifications();
                setInterval(fetchNotifications, 60000);
            });

            function fetchNotifications() {
                fetch('/Notification/GetNotifications')
                    .then(response => response.json())
                    .then(data => {
                        const countBadge = document.getElementById('notif-count');
                        const list = document.getElementById('notif-list');

                        if (data.count > 0) {
                            countBadge.innerText = data.count > 9 ? '9+' : data.count;
                            countBadge.style.display = 'inline-block';
                        } else {
                            countBadge.style.display = 'none';
                        }

                        list.innerHTML = '';
                        if (data.notifications.length === 0) {
                            list.innerHTML = '<div class="text-center py-4 small text-muted">No new alerts</div>';
                        } else {
                            data.notifications.forEach(n => {
                                let bgClass = n.isRead ? 'bg-white' : 'bg-light fw-bold border-start border-4 border-primary';
                                let item = `
                                                <a class="dropdown-item d-flex align-items-center p-3 border-bottom ${bgClass}" href="${n.url || '#'}" onclick="markRead(${n.id})">
                                                    <div class="me-3">
                                                        <div class="rounded-circle bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center" style="width:32px;height:32px;">
                                                            <i class="fas fa-info small"></i>
                                                        </div>
                                                    </div>
                                                    <div style="white-space:normal;line-height:1.2;">
                                                        <div class="small text-muted mb-1" style="font-size:0.75rem;">${n.timeAgo}</div>
                                                        <span class="d-block text-dark small">${n.message}</span>
                                                    </div>
                                                </a>`;
                                list.innerHTML += item;
                            });
                        }
                    });
            }

            function markRead(id) { fetch('/Notification/MarkAsRead?id=' + id, { method: 'POST' }); }
            function markAllRead() { fetch('/Notification/MarkAllRead', { method: 'POST' }).then(() => fetchNotifications()); }

            const themeToggle = document.getElementById('theme-toggle');
            themeToggle.addEventListener('click', () => {
                const currentTheme = document.documentElement.getAttribute('data-bs-theme');
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                document.documentElement.setAttribute('data-bs-theme', newTheme);
                localStorage.setItem('theme', newTheme);
            });
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>