@model List<SPT.Models.ViewModels.LeaderboardViewModel>
@{
    ViewData["Title"] = "Hall of Fame";
    int myId = ViewBag.MyStudentId;
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="fw-bold"><i class="fas fa-trophy text-warning"></i> Hall of Fame</h1>
        <p class="text-muted">Top performing students across all tracks.</p>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="text-center" style="width: 80px;">Rank</th>
                            <th>Student</th>
                            <th>Track</th>
                            <th class="text-end">Verified Hours</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var s = Model[i];
                            var rank = i + 1;
                            bool isMe = s.StudentId == myId;
                            string rowClass = isMe ? "table-primary border-start border-4 border-primary" : "";

                            <tr class="@rowClass">
                                <td class="text-center">
                                    @if (rank == 1)
                                    {
                                        <i class="fas fa-medal fa-2x text-warning" title="Gold"></i>
                                    }
                                    else if (rank == 2)
                                    {
                                        <i class="fas fa-medal fa-2x text-secondary" title="Silver"></i>
                                    }
                                    else if (rank == 3)
                                    {
                                        <i class="fas fa-medal fa-2x" style="color: #cd7f32;" title="Bronze"></i>
                                    }
                                    else
                                    {
                                        <span class="fw-bold text-muted h5">@rank</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@(s.ProfilePicture ?? "/images/default-avatar.png")" class="rounded-circle me-3" style="width:40px;height:40px;object-fit:cover;">
                                        <div>
                                            <span class="fw-bold d-block">@s.FullName @(isMe ? "(You)" : "")</span>
                                            <small class="text-muted">@s.CohortName</small>
                                        </div>
                                    </div>
                                </td>
                                <td><span class="badge bg-light text-dark border">@s.TrackCode</span></td>
                                <td class="text-end">
                                    <span class="fw-bold text-success h5">@s.TotalHours</span> <small>hrs</small>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>