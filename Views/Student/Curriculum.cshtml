@model List<SPT.Models.CurriculumViewModel>
@if (TempData["QuizError"] != null)
{
    <div class="alert alert-danger">
        @TempData["QuizError"]
    </div>
}
@{
    ViewData["Title"] = "My Learning Roadmap";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="fas fa-map-signs"></i> My Learning Path</h2>

   
    <div class="row">
        @foreach (var module in Model)
        {
            var isLocked = module.IsLocked;
            var cardClass = isLocked ? "bg-light text-muted border-0" : "border-primary shadow-sm";
            var iconColor = isLocked ? "text-muted" : (module.IsCompleted ? "text-success" : "text-primary");
            var iconClass = isLocked ? "fa-lock" : (module.IsCompleted ? "fa-check-circle" : "fa-unlock-alt");

            <div class="col-md-12 mb-3">
                <div class="card @cardClass h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">

                            <div class="d-flex align-items-center">
                                <div class="me-4 text-center @iconColor" style="width: 50px;">
                                    <i class="fas @iconClass fa-2x"></i>
                                </div>

                                <div>
                                    <h5 class="mb-1 fw-bold">
                                        @module.ModuleCode: @module.ModuleName
                                        @if (module.IsCompleted)
                                        {
                                            <span class="badge bg-success ms-2" style="font-size: 0.6em;">Completed</span>
                                        }
                                    </h5>
                                    <p class="mb-1 text-muted small">@module.Topics</p>

                                    <div class="mt-2">
                                        <span class="badge bg-secondary me-1">@module.Difficulty</span>
                                        <span class="badge bg-light border">@module.RequiredHours Hrs Required</span>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex flex-column gap-2" style="min-width: 160px;">
                                @if (!isLocked)
                                {
                                    <button class="btn btn-outline-primary w-100 btn-sm" data-bs-toggle="modal" data-bs-target="#resourceModal_@module.Id">
                                        <i class="fas fa-book-open me-1"></i> Study Materials
                                    </button>

                                    @if (!module.IsCompleted)
                                    {
                                        <a asp-controller="Student"
                                           asp-action="TakeQuiz"
                                           asp-route-moduleId="@module.Id"
                                           class="btn btn-primary btn-sm">
                                            <i class="fas fa-pencil-alt"></i> Take Quiz
                                        </a>

                                    }
                                    else
                                    {
                                        <button class="btn btn-success w-100 btn-sm disabled">
                                            <i class="fas fa-check"></i> Passed
                                        </button>
                                    }
                                }
                                else
                                {
                                    <button disabled class="btn btn-light border text-muted w-100 btn-sm">
                                        <i class="fas fa-lock"></i> Locked
                                    </button>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="resourceModal_@module.Id" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header border-bottom-0 pb-0">
                            <h5 class="modal-title fw-bold">📚 Study Materials: @module.ModuleName</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                       
                            <div class="modal-body">

                                @* ✅ MINI PROJECT HANDLING *@
                            @if (module.IsMiniProject)
                            {
                                <div class="alert alert-info small text-center">
                                    📌 <strong>This is a Mini Project</strong><br />
                                    Complete all previous modules and submit your project for mentor review.
                                </div>
                            }
                            else
                            {
                                <div class="list-group list-group-flush">
                                    @foreach (var res in module.Resources)
                                    {
                                        <a href="@res.Url"
                                           target="_blank"
                                           class="list-group-item list-group-item-action d-flex align-items-center p-3 my-1 border rounded shadow-sm">

                                            <div class="me-3">
                                                @if (res.Type == "Video" || res.Url.Contains("youtube"))
                                                {
                                                    <i class="fab fa-youtube fa-2x text-danger"></i>
                                                }
                                                else if (res.Type == "PDF")
                                                {
                                                    <i class="fas fa-file-pdf fa-2x text-danger"></i>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-link fa-2x text-primary"></i>
                                                }
                                            </div>

                                            <div>
                                                <h6 class="mb-0 fw-bold">@res.Title</h6>
                                                <small class="text-muted">Click to open resource</small>
                                            </div>

                                            <i class="fas fa-external-link-alt ms-auto text-muted"></i>
                                        </a>
                                    }
                                </div>
                            }


                            </div>

                        </div>
                    </div>
                </div>
            
        }
    
    </div>
</div>