@model List<SPT.Models.CurriculumViewModel>
@{
    ViewData["Title"] = "My Learning Roadmap";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="fas fa-map-signs"></i> My Learning Path</h2>

    <div class="row">
        @foreach (var module in Model)
        {
            string cardClass = module.IsLocked ? "bg-light text-muted border-0" : "border-primary shadow-sm";
            string icon = module.IsLocked ? "fa-lock" : (module.IsCompleted ? "fa-check-circle text-success" : "fa-unlock text-primary");

            <div class="col-md-12 mb-3">
                <div class="card @cardClass">
                    <div class="card-body d-flex justify-content-between align-items-center">

                        <div class="d-flex align-items-center">
                            <div class="me-4 text-center" style="width: 50px;">
                                <i class="fas @icon fa-2x"></i>
                            </div>
                            <div>
                                <h5 class="mb-1">
                                    @module.ModuleCode: @module.Title
                                    @if (module.IsCompleted)
                                    {
                                        <span class="badge bg-success">Completed</span>
                                    }
                                </h5>
                                <small class="text-muted">@module.Description</small>
                                <br />
                                <span class="badge bg-secondary">@module.Difficulty</span>
                                <span class="badge bg-light text-dark border">@module.RequiredHours Hrs Required</span>
                            </div>
                        </div>

                        <div>
                            @if (module.IsLocked)
                            {
                                <button class="btn btn-sm btn-secondary disabled">
                                    <i class="fas fa-lock"></i> Locked
                                </button>
                            }
                            else if (module.IsCompleted)
                            {
                                <button class="btn btn-sm btn-outline-success disabled">
                                    <i class="fas fa-certificate"></i> Done
                                </button>
                            }
                            else
                            {
                                <a asp-action="TakeQuiz" asp-route-moduleId="@module.ModuleId" class="btn btn-primary">
                                    <i class="fas fa-pencil-alt"></i> Take Quiz to Unlock Next
                                </a>
                            }
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>