@model SPT.Models.AttendanceViewModel

@{
    ViewData["Title"] = "My Attendance";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="fas fa-calendar-check text-success"></i> My Attendance Record</h2>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm border-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title fw-bold text-primary">Current Week Progress</h5>
                            <p class="text-muted mb-0">Resets every Monday. Target: 5 Days/Week.</p>
                        </div>
                        <div class="text-end">
                            <h2 class="fw-bold display-4 mb-0">@Model.DaysLoggedThisWeek <span class="fs-6 text-muted">/ 5</span></h2>
                        </div>
                    </div>
                    <div class="progress mt-3" style="height: 10px;">
                        <div class="progress-bar progress-bar-striped progress-bar-animated"
                             role="progressbar"
                             style="width: @(Math.Min(100, Model.WeeklyCompletionRate))%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light fw-bold">
                    <i class="fas fa-map-marker-alt"></i> Work Location
                </div>
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <div class="row">
                        <div class="col-6 border-end">
                            <h3 class="text-success fw-bold">@Model.TotalOfficeDays</h3>
                            <small class="text-muted"><i class="fas fa-building"></i> Office</small>
                        </div>
                        <div class="col-6">
                            <h3 class="text-info fw-bold">@Model.TotalRemoteDays</h3>
                            <small class="text-muted"><i class="fas fa-home"></i> Remote</small>
                        </div>
                    </div>
                    <hr />
                    <div class="mt-2">
                        <span class="badge bg-success">Requirement: Flexible</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header custom-card fw-bold">
                    <i class="fas fa-chart-bar"></i> Monthly Attendance History
                </div>
                <div class="card-body">
                    <canvas id="attendanceChart" style="max-height: 250px;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light fw-bold">
            <i class="fas fa-history"></i> Recent Check-ins
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Day</th>
                        <th>Location</th>
                        <th>Hours</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model.RecentLogs)
                    {
                        <tr>
                            <td>@log.Date.ToString("MMM dd, yyyy")</td>
                            <td>@log.Date.DayOfWeek</td>
                            <td>
                                @if (log.Location == "Office")
                                {
                                    <span class="badge bg-success"><i class="fas fa-building"></i> Office</span>
                                }
                                else
                                {
                                    <span class="badge bg-info"><i class="fas fa-home"></i> Remote</span>
                                }
                            </td>
                            <td>@log.Hours hrs</td>
                            <td><span class="text-success fw-bold"><i class="fas fa-check"></i> Verified</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('attendanceChart').getContext('2d');
    var chart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.MonthLabels)),
            datasets: [{
                label: 'Days Attended',
                data: @Html.Raw(Json.Serialize(Model.MonthlyAttendanceCounts)),
                backgroundColor: 'rgba(54, 162, 235, 0.6)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true,
                    suggestedMax: 30
                }
            },
            responsive: true,
            maintainAspectRatio: false
        }
    });
</script>