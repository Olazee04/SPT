@model SPT.Models.Student
@using System.Linq

@{
    ViewData["Title"] = "My Dashboard";

    var logs = Model.ProgressLogs != null

        ? Model.ProgressLogs.ToList()

        : new List<SPT.Models.ProgressLog>();

    var approvedHours = logs.Where(p => p.IsApproved).Sum(p => p.Hours);

    var pendingHours = logs.Where(p => !p.IsApproved).Sum(p => p.Hours);

    var logsCount = logs.Count;



    var weeklyHours = (decimal)ViewBag.WeeklyHours;

    var consistencyScore = (int)ViewBag.Consistency;
}

<div class="col-md-3">
    <div class="card shadow-sm border-0 h-100">
        <div class="card-body">
            <h6 class="text-muted text-uppercase small fw-bold">Verified Hours</h6>
            <div class="d-flex align-items-center">
                <h2 class="mb-0 fw-bold text-success">@approvedHours</h2>
                <span class="ms-2 small text-muted">/ @Model.TargetHoursPerWeek</span>
            </div>

            @if (pendingHours > 0)
            {
                <div class="mt-2 badge bg-warning text-dark">
                    <i class="fas fa-clock"></i> @pendingHours hrs pending
                </div>
            }
            else
            {
                <small class="text-muted">All logs verified</small>
            }
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">👋 Welcome, @Model.FullName.Split(' ')[0]!</h2>
            <p class="text-muted mb-0">
                <span class="badge bg-primary">@Model.Track?.Code</span>
                @Model.Cohort?.Name •
                <span class="text-success">@Model.EnrollmentStatus</span>
            </p>
        </div>

        <button type="button" class="btn btn-primary btn-lg shadow-sm" data-bs-toggle="modal" data-bs-target="#logWorkModal">
        <i class="fas fa-plus-circle"></i> Log Daily Progress
    </button>

    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h6 class="text-muted text-uppercase small fw-bold">Consistency Score</h6>
                    <div class="d-flex align-items-center">
                        <h2 class="mb-0 fw-bold text-primary">@consistencyScore%</h2>
                        <span class="ms-2 badge bg-light text-dark">Rank: #--</span>
                    </div>
                    <small class="text-muted">Target: 80%+</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h6 class="text-muted text-uppercase small fw-bold">Hours This Week</h6>
                    <div class="d-flex align-items-center">
                        <h2 class="mb-0 fw-bold text-success">@weeklyHours</h2>
                        <span class="ms-2 small text-muted">/ @Model.TargetHoursPerWeek</span>
                    </div>

                    @if (pendingHours > 0)

                    {
                        <div class="mt-2 badge bg-warning text-dark">
                            <i class="fas fa-clock"></i> @pendingHours hrs pending
                        </div>
                    }

                    else

                    {
                        <small class="text-muted d-block mt-1">Total Lifetime: <strong>@approvedHours</strong> hrs</small>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h6 class="text-muted text-uppercase small fw-bold">Total Check-ins</h6>
                    <h2 class="mb-0 fw-bold text-info">@logsCount</h2>
                    <small class="text-muted">Days active</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h6 class="text-muted text-uppercase small fw-bold">Your Mentor</h6>
                    <div class="d-flex align-items-center mt-2">
                        <div class="avatar-circle bg-warning text-white me-2" style="width:40px;height:40px;border-radius:50%;display:flex;align-items:center;justify-content:center;font-weight:bold;">
                            @(Model.Mentor?.FullName.Substring(0, 1) ?? "?")
                        </div>
                        <div>
                            <p class="mb-0 fw-bold">@(Model.Mentor?.FullName ?? "Not Assigned")</p>
                            <small class="text-muted">View Feedback</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">📅 Recent Activity</h5>
                    <a href="#" class="text-decoration-none small">View All</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Topic / Module</th>
                                    <th>Hours</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.ProgressLogs.Any())

                                {

                                    foreach (var log in Model.ProgressLogs.OrderByDescending(p => p.Date).Take(5))

                                    {
                                        <tr>
                                            <td>@log.Date.ToString("MMM dd")</td>
                                            <td>@log.ModuleId (Placeholder)</td>
                                            <td>@log.Hours hrs</td>
                                            <td>
                                                <span class="badge bg-success">Verified</span>
                                            </td>
                                        </tr>
                                    }

                                }

                                else

                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-4 text-muted">
                                            <i class="fas fa-clipboard-list fa-2x mb-2"></i>
                                            <p>No activity logged yet. Start today!</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-3">
                <div class="card-body text-center">
                    <img src="@(Model.ProfilePicture ?? "/images/default-avatar.png")" class="rounded-circle mb-3" style="width:100px;height:100px;object-fit:cover;" />
                    <h5>@Model.FullName</h5>
                    <p class="text-muted small">@Model.Email</p>
                    <hr />
                    <div class="d-grid gap-2">
                        <a asp-controller="Student" asp-action="Profile" class="btn btn-outline-secondary btn-sm">Edit Profile</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-3 mb-4">
    
    <div class="col-md-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h6 class="text-muted text-uppercase small fw-bold">Consistency</h6>
                <div class="d-flex align-items-center">
                    @{
                        var score = (int)(ViewBag.Consistency ?? 0);
                        string colorClass = score >= 80 ? "text-success" : (score >= 50 ? "text-warning" : "text-danger");
                    }
                    <h2 class="mb-0 fw-bold @colorClass">@score%</h2>
                    
                    <span class="ms-2 badge bg-primary text-white" title="Your Global Rank">
                        <i class="fas fa-trophy"></i> #@(ViewBag.Rank ?? "-")
                    </span>
                </div>
                <div class="progress mt-2" style="height: 5px;">
                    <div class="progress-bar @(score >= 80 ? "bg-success" : "bg-warning")" role="progressbar" style="width: @score%"></div>
                </div>
                <small class="text-muted">Last 28 Days Performance</small>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h6 class="text-muted text-uppercase small fw-bold">Verified Hours</h6>
                <div class="d-flex align-items-center">
                    <h2 class="mb-0 fw-bold text-success">@approvedHours</h2>
                    <span class="ms-2 small text-muted">/ @Model.TargetHoursPerWeek</span>
                </div>
                @if (pendingHours > 0)
                {
                    <div class="mt-2 badge bg-warning text-dark">
                        <i class="fas fa-clock"></i> @pendingHours hrs pending
                    </div>
                }
                else 
                {
                    <small class="text-muted">All logs verified</small>
                }
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <h6 class="text-muted text-uppercase small fw-bold">Current Streak</h6>
                <div class="d-flex align-items-center">
                    <h2 class="mb-0 fw-bold text-danger">
                        <i class="fas fa-fire"></i> @(ViewBag.Streak ?? 0)
                    </h2>
                    <span class="ms-2 small text-muted">days</span>
                </div>
                <small class="text-muted">Don't break the chain!</small>
            </div>
        </div>
    </div>

</div>
    </div>

    <div class="modal fade" id="logWorkModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold">Log Daily Progress</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <form asp-action="LogWork" method="post">

                        <div class="mb-3">
                            <label class="form-label fw-bold small text-uppercase text-muted">Current Module</label>
                            <select name="moduleId" class="form-select" required>
                                @if (ViewBag.CurrentModules != null)

                                {

                                    foreach (var m in (IEnumerable<dynamic>)ViewBag.CurrentModules)

                                    {
                                        <option value="@m.Id">@m.Code - @m.Name</option>
                                    }

                                }

                                else

                                {
                                    <option value="">No modules found</option>
                                }
                            </select>
                        </div>

                        <div class="row mb-3">
                            <div class="col-6">
                                <label class="form-label fw-bold small text-uppercase text-muted">Hours Spent</label>
                                <input type="number" step="0.5" min="0.5" max="24" name="hours" class="form-control" required placeholder="e.g. 4.5">
                            </div>
                            <div class="col-6">
                                <label class="form-label fw-bold small text-uppercase text-muted">Location</label>
                                <select name="location" class="form-select">
                                    <option value="Remote">🏠 Remote</option>
                                    <option value="Office">🏢 Office / Hub</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold small text-uppercase text-muted">What did you learn?</label>
                            <textarea name="description" class="form-control" rows="3" required placeholder="Briefly describe what you studied or built today..."></textarea>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-uppercase text-muted">Proof of Work (Optional)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fab fa-github"></i></span>
                                <input type="url" name="evidenceUrl" class="form-control" placeholder="https://github.com/..." />
                            </div>
                            <div class="form-text">Link to GitHub commit, PR, or hosted project.</div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Submit Log</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>