@model SPT.Models.Student
@{
    ViewData["Title"] = "My Dashboard";

    var logs = Model.ProgressLogs?.OrderByDescending(d => d.Date).ToList() ?? new List<SPT.Models.ProgressLog>();

    var approvedHours = logs.Where(p => p.IsApproved).Sum(p => p.Hours);

    var pendingHours = logs.Where(p => !p.IsApproved).Sum(p => p.Hours);

    var weeklyHours = (decimal)(ViewBag.WeeklyHours ?? 0);

    var consistencyScore = (int)(ViewBag.Consistency ?? 0);

    var streak = (int)(ViewBag.Streak ?? 0);

    var announcement = ViewBag.LatestAnnouncement as SPT.Models.Announcement;

    var nextModule = ViewBag.NextModule as dynamic; // Using dynamic to avoid null checks on ViewBags
}
@if (ViewBag.DashboardAlerts != null)

{

    foreach (var alert in ViewBag.DashboardAlerts)

    {
        <div class="alert alert-@(
    alert.Type == "Success" ? "success" :
    alert.Type == "Info" ? "info" :
    "danger"
) alert-dismissible fade show">

            <strong>@alert.Title</strong><br />
            @alert.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

}


<div class="container mt-4">

    @if (announcement != null)

    {
        <div class="alert alert-info border-0 shadow-sm leaderboard-card d-flex align-items-center mb-4" role="alert">
            <div class="me-3 display-6 text-info"><i class="fas fa-bullhorn"></i></div>
            <div>
                <h5 class="alert-heading fw-bold mb-1">@announcement.Title</h5>
                <p class="mb-0 small">@announcement.Message</p>
            </div>
            <small class="ms-auto text-muted">@announcement.CreatedAt.ToString("MMM dd")</small>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">👋 Welcome, @Model.FullName.Split(' ')[0]!</h2>
            <p class="text-muted mb-0">
                <span class="badge bg-primary">@Model.Track?.Code</span>
                @Model.Cohort?.Name
            </p>
        </div>
        <button type="button" class="btn btn-primary btn-lg shadow-sm" data-bs-toggle="modal" data-bs-target="#logWorkModal">
            <i class="fas fa-plus-circle"></i> Log Daily Progress
        </button>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 leaderboard-card h-100">
                <div class="card-body">
                    <h6 class="text-muted text-uppercase small fw-bold">Verified Hours</h6>
                    <div class="d-flex align-items-center">
                        <h2 class="mb-0 fw-bold text-success">@approvedHours</h2>
                        <span class="ms-2 small text-muted">/ @Model.TargetHoursPerWeek</span>
                    </div>
                    @if (pendingHours > 0)
                    {
                        <div class="mt-2 badge bg-warning text-dark"><i class="fas fa-clock"></i> @pendingHours hrs pending</div>
                    }
                    else
                    {
                        <small class="text-muted">All logs verified</small>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm leaderboard-card border-0 h-100">
                <div class="card-body">
                    <h6 class="text-muted text-uppercase small fw-bold">Consistency</h6>
                    <div class="d-flex align-items-center">
                        <h2 class="mb-0 fw-bold @(consistencyScore >= 80 ? "text-primary" : "text-warning")">@consistencyScore%</h2>
                    </div>
                    <div class="progress mt-2" style="height: 5px;">
                        <div class="progress-bar @(consistencyScore >= 80 ? "bg-primary" : "bg-warning")" style="width: @consistencyScore%"></div>
                    </div>
                    <small class="text-muted">Last 28 Days</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm leaderboard-card border-0 h-100">
                <div class="card-body">
                    <h6 class="text-muted text-uppercase small fw-bold">Current Streak</h6>
                    <div class="d-flex align-items-center">
                        <h2 class="mb-0 fw-bold text-danger"><i class="fas fa-fire"></i> @streak</h2>
                        <span class="ms-2 small text-muted">days</span>
                    </div>
                    <small class="text-muted">Don't break the chain!</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm leaderboard-card border-0 h-100">
                <div class="card-body">
                    <h6 class="text-muted text-uppercase small fw-bold">Attendance</h6>
                    <div class="d-flex align-items-center">
                      
                        <span class="badge bg-success">
                            Attendance this week: @ViewBag.WeeklyAttendance days
                        </span>
                    </div>
                    <small class="text-muted">Don't miss Tomorrow!</small>
                </div>
            </div>
        </div>
        

        <div class="col-md-3">
            <div class="card shadow-sm leaderboard-card border-0 h-100">
                <div class="card-body">
                    <h6 class="text-muted text-uppercase small fw-bold">Your Mentor</h6>
                    <div class="d-flex align-items-center mt-2">
                        <div class="avatar-circle bg-warning text-white me-2" style="width:40px;height:40px;border-radius:50%;display:flex;align-items:center;justify-content:center;font-weight:bold;">
                            @(Model.Mentor?.FullName.Substring(0, 1) ?? "?")
                        </div>
                        <div>
                            <p class="mb-0 fw-bold">@(Model.Mentor?.FullName ?? "Not Assigned")</p>
                            <small class="text-muted">View Feedback</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm leaderboard-card mb-4">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">📅 Recent Activity</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-3">Date</th>
                                    <th>Topic / Module</th>
                                    <th>Hours</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (logs.Any())

                                {

                                    foreach (var log in logs.Take(5))

                                    {
                                        <tr>
                                            <td class="ps-3">@log.Date.ToString("MMM dd")</td>
                                            <td>
                                                @if (log.Module != null)

                                                {
                                                    <span class="fw-bold">@log.Module.ModuleCode</span>
                                                    <span class="text-muted small d-block">@log.Module.ModuleName</span>
                                                }

                                                else

                                                {
                                                    <span class="badge bg-light text-dark border">Self-Study / Other</span>
                                                }
                                                @if (!string.IsNullOrWhiteSpace(log.MentorResponse))

                                                {
                                                    <div class="alert alert-info mt-2 mb-0 p-2 small">
                                                        <strong>💬 Mentor Advice:</strong><br />
                                                        @log.MentorResponse
                                                    </div>
                                                }

                                                @if (log.IsRejected && !string.IsNullOrWhiteSpace(log.RejectionReason))

                                                {
                                                    <div class="alert alert-danger mt-2 mb-0 p-2 small">
                                                        <strong>❌ Rejection Reason:</strong><br />
                                                        @log.RejectionReason
                                                    </div>
                                                }


                                            </td>
                                            <td>@log.Hours hrs</td>
                                            <td>
                                                @if (log.IsApproved)

                                                {
                                                    <span class="badge bg-success bg-opacity-10 text-success">Verified</span>
                                                }

                                                else if (log.IsRejected)

                                                {
                                                    <span class="badge bg-danger bg-opacity-10 text-danger">Rejected</span>
                                                }

                                                else

                                                {
                                                    <span class="badge bg-warning bg-opacity-10 text-warning">Pending</span>
                                                }
                                            </td>

                                        </tr>
                                    }

                                }

                                else

                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-5 text-muted">
                                            <i class="fas fa-clipboard-list fa-2x mb-2 opacity-25"></i>
                                            <p>No activity logged yet. Start today!</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">

            @if (nextModule != null)
            {
                <div class="card shadow-sm mb-4 leaderboard-card border-0 bg-primary text-white position-relative overflow-hidden">
                    <div class="card-body position-relative" style="z-index:1;">
                        <h6 class="text-uppercase small opacity-75 fw-bold mb-2">🚀 Next Milestone</h6>
                        <h5 class="fw-bold mb-1">@nextModule.ModuleCode</h5>
                        <p class="mb-3 text-white-50 small">@nextModule.ModuleName</p>
                        <a asp-action="Curriculum" class="btn btn-light text-primary btn-sm fw-bold w-100">
                            Start Learning <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                    <i class="fas fa-rocket position-absolute" style="font-size: 5rem; opacity: 0.1; right: -20px; bottom: -20px;"></i>
                </div>
            }

            @if (ViewBag.Leaderboard != null)
            {
                <div class="card shadow-sm mb-4 border-0 leaderboard-card">
                    <div class="card-header bg-white fw-bold border-bottom-0 pt-3">
                        <i class="fas fa-trophy text-warning me-1"></i> Top Students
                    </div>
                    <div class="card-body pt-0">
                        <ul class="list-group list-group-flush">
                            @foreach (var s in (IEnumerable<dynamic>)ViewBag.Leaderboard)

                            {
                                <li class="list-group-item px-0 d-flex justify-content-between align-items-center border-0">
                                    <div class="d-flex align-items-center">
                                        <img src="@(s.ProfilePic ?? "/images/default-avatar.png")" class="rounded-circle me-2 border" style="width:30px;height:30px;object-fit:cover;">
                                        <span class="small fw-bold">@s.Name</span>
                                    </div>
                                    <span class="badge bg-light text-dark border">@s.TotalHours hrs</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }

            <div class="card shadow-sm leaderboard-card text-center">
                <div class="card-body">
                    <img src="@(Model.ProfilePicture ?? "/images/default-avatar.png")" class="rounded-circle mb-3 border p-1" style="width:80px;height:80px;object-fit:cover;" />
                    <h5 class="fw-bold h6">@Model.FullName</h5>
                    <a asp-action="Profile" class="btn btn-outline-secondary btn-sm w-100">Edit Profile</a>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="logWorkModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">Log Daily Progress</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <form asp-action="LogWork" method="post">

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-uppercase text-muted">Log Date</label>
                        <input type="date" name="logDate" class="form-control" required
                               value="@DateTime.UtcNow.ToString("yyyy-MM-dd")"
                               max="@DateTime.UtcNow.ToString("yyyy-MM-dd")"
                               min="@DateTime.UtcNow.AddDays(-1).ToString("yyyy-MM-dd")" />
                        <div class="form-text text-muted small">You can only log work for Today or Yesterday.</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-uppercase text-muted">Topic / Module</label>
                        <select name="moduleId" id="moduleSelect" class="form-select" required onchange="handleModuleChange(this)">
                            <option value="" selected disabled>Select what you worked on...</option>

                            @if (ViewBag.CurrentModules != null)

                            {

                                foreach (var m in (IEnumerable<dynamic>)ViewBag.CurrentModules)

                                {
                                    <option value="@m.Id">@m.ModuleCode - @m.ModuleName</option>
                                }

                            }
                            <option value="-1" class="fw-bold text-primary">➕ Other / Self-Study</option>
                        </select>
                    </div>

                    <div class="mb-3 d-none" id="customTopicDiv">
                        <label class="form-label fw-bold small text-primary">Enter Custom Topic</label>
                        <input type="text" name="customTopic" class="form-control border-primary" placeholder="e.g. C# Delegates (Extra)" />
                    </div>

                    <div class="row mb-3">
                        <div class="col-6">
                            <label class="form-label fw-bold small text-uppercase text-muted">Hours Spent</label>
                            <input type="number" step="0.5" min="0.5" max="5" name="hours" class="form-control" required placeholder="Max 5.0"
                                   oninput="if(this.value > 5) this.value = 5;">
                            <div class="form-text text-danger small">Max: 5.0</div>
                        </div>
                        <div class="col-6">
                            <label class="form-label fw-bold small text-uppercase text-muted">Location</label>
                            <select name="location" class="form-select">
                                <option value="Remote">🏠 Remote</option>
                                <option value="Office">🏢 Office</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-uppercase text-muted">What did you learn?</label>
                        <textarea name="description" class="form-control" rows="2" required placeholder="Briefly describe the lesson..."></textarea>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" name="practiceDone" value="true" id="practiceCheck">
                        <label class="form-check-label fw-bold" for="practiceCheck">
                            ✅ I completed the practical exercises
                        </label>
                    </div>
                    <div class="mb-3">
    <label class="form-label fw-bold">Blockers / Challenges</label>
    <textarea name="Blocker" class="form-control" rows="2" placeholder="Did you get stuck on anything?"></textarea>
</div>

<div class="mb-3">
    <label class="form-label fw-bold">What will you learn tomorrow?</label>
                        <textarea name="NextGoal" class="form-control" rows="2" placeholder="What is your goal for the next session?"></textarea>
</div>
                    <div class="mb-4">
                        <label class="form-label fw-bold small text-uppercase text-muted">Proof of Work (Link)</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fab fa-github"></i></span>
                            <input type="url" name="evidenceUrl" class="form-control" placeholder="https://github.com/..." />
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Submit Log</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function handleModuleChange(select) {
        var customDiv = document.getElementById("customTopicDiv");
        if (select.value === "-1") {
            customDiv.classList.remove("d-none");
            customDiv.querySelector("input").required = true;
        } else {
            customDiv.classList.add("d-none");
            customDiv.querySelector("input").required = false;
        }
    }
</script>