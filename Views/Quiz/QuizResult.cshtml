@{
    ViewData["Title"] = "Quiz Result";
    int score = (int)(TempData["QuizResult_Score"] ?? 0);
    int total = (int)(TempData["QuizResult_Total"] ?? 0);
    int correct = (int)(TempData["QuizResult_Correct"] ?? 0);
    string cssClass = score >= 70 ? "text-success" : "text-danger";
}

<div class="container p-5 text-center">
    <div class="card shadow-sm border-0 mx-auto" style="max-width: 500px;">
        <div class="card-body py-5">
            @if (score >= 70)
            {
                <i class="fas fa-trophy fa-4x text-warning mb-3"></i>
                <h2 class="font-weight-bold text-gray-800">Congratulations!</h2>
                <p class="text-muted">You passed this module.</p>
            }
            else
            {
                <i class="fas fa-times-circle fa-4x text-danger mb-3"></i>
                <h2 class="font-weight-bold text-gray-800">Keep Trying!</h2>
                <p class="text-muted">You need 70% to pass.</p>
            }

            <div class="display-3 font-weight-bold @cssClass my-3">@score%</div>
            <p class="lead">You got <strong>@correct</strong> out of <strong>@total</strong> correct.</p>

            <a asp-controller="Student" asp-action="Dashboard" class="btn btn-primary mt-3">Back to Dashboard</a>
        </div>
    </div>
</div>